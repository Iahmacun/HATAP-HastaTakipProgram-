        {{ user.firstname }}
        {{ user.lastname }}
        {{ user.age }}
      </span>
    </div>
    {% if user.userType == 1 %}
      <a href="/admin/resources/Users">AdminJs</a>
    {% endif %}
  {% endif %}
  <br> <br>
  {% block content %}
    <div class="xcontent">
      <h1 style="color: #0288D1;">My First Heading</h1> 
      <p style="color: #0288D1;">My first paragraph.</p> 
    </div>
  {% endblock %}
</body>
</html>
